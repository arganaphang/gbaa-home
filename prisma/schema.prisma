generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgres"
    url      = env("DATABASE_URL")
}

model Posts {
    id         String    @id @default(uuid())
    title      String
    content    String
    type       String
    created_at DateTime  @default(now())
    updated_at DateTime  @updatedAt
    deleted_at DateTime?
    authorId   String
    author     User      @relation(fields: [authorId], references: [id])
}

model User {
    id       String  @id @default(uuid())
    name     String
    email    String  @unique
    password String
    Posts    Posts[]
}
